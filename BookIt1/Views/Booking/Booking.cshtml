@model BookIt1.Models.BookingViewModel

@{
    ViewData["Title"] = "Book Event";
    Layout = "_Layout";
}

<style>
    body {
        background-color: #121212; /* dark background */
        color: #f0f0f0;
    }

    .card {
        background-color: #1e1e2f;
        border: none;
        color: #ffffff;
    }

    .form-control,
    .form-select {
        background-color: #2c2c3b;
        color: #ffffff;
        border: 1px solid #444;
    }

        .form-control::placeholder {
            color: #bbb;
        }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    label {
        color: #ccc;
    }

    .form-control[readonly] {
        background-color: #2c2c3b;
        color: #f8f9fa; /* brighter text for readability */
        font-weight: 500;
    }

</style>

<div class="container mt-5 mb-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-gradient text-white text-center rounded-top-4" style="background: linear-gradient(135deg, #3f87a6, #ebf8e1); color: #000;">
            <h2 class="mb-0">Book Event: @Model.EventTitle</h2>
        </div>
        <div class="card-body p-4">

            <form asp-action="Booking" method="post">
                <input type="hidden" asp-for="EventId" />

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-semibold"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="your@email.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="0771234567" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AvailableTickets" class="form-label fw-semibold"></label>
                    <input asp-for="AvailableTickets" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="TicketsToBook" class="form-label fw-semibold"></label>
                    <input asp-for="TicketsToBook" type="number" min="1" class="form-control" />
                    <span asp-validation-for="TicketsToBook" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Notes" class="form-label fw-semibold"></label>
                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Optional notes..."></textarea>
                    <span asp-validation-for="Notes" class="text-danger small"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4 py-2">Confirm Booking</button>
                </div>
            </form>

        </div>
    </div>
</div>




