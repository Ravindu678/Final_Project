@*@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject BookIt1DbContext _context*@


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookIt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookIt1.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
               <a class="navbar-brand fw-bold fs-3" style="color: #000000; font-family: 'Poppins', sans-serif;" asp-area="" asp-controller="Home" asp-action="Index">BookIt 🚀</a>


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
               <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
       <li class="nav-item">
    <a class="nav-link fw-bold text-light px-3 nav-hover" asp-area="" asp-controller="Home" asp-action="Index">
        🏠 Home
    </a>
</li>
      <li class="nav-item">
    <a class="nav-link fw-bold text-light px-3 nav-hover" asp-area="" asp-controller="Home" asp-action="Events">
        🎭 Events
    </a>
</li>
<li class="nav-item">
    <a class="nav-link fw-bold text-light px-3 nav-hover" asp-area="" asp-controller="Home" asp-action="Contact">
        📞 Contact
    </a>
</li>
<li class="nav-item">
    <a class="nav-link fw-bold text-light px-3 nav-hover" asp-area="" asp-controller="Home" asp-action="About">
        ℹ️ About
    </a>
</li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold text-gold px-3 nav-hover" asp-area="" asp-controller="Home" asp-action="Recommendations">
                                ⭐ Events for You
                            </a>
                        </li>




    <!-- Right-aligned Login/Register -->
    <ul class="navbar-nav ms-auto">
        <partial name="_LoginPartial.cshtml" />
    </ul>
</div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer d-flex justify-content-center footer-orange">
        <div class="container text-center">
            &copy; 2025 - BookIt
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Slick Carousel -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    .footer-orange {
        color: orange;
    }

    .text-gold {
        color: #FFD700 !important; /* Gold color */
        font-weight: 700;
    }

        .text-gold:hover {
            color: #FFC300 !important; /* Slightly lighter gold on hover */
        }
</style>
