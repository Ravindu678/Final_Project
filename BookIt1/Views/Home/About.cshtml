@{
    ViewData["Title"] = "About";
}

<style>
    /* Global Styles */
    body {
        margin: 0;
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(to right, #0f0f0f, #1c1c1c); /* Smooth dark gradient */
        color: #E0E0E0;
        overflow-x: hidden;
    }

    /* About Section */
    .about-container {
        max-width: 900px;
        margin: 80px auto;
        padding: 40px;
        background: rgba(255, 255, 255, 0.1); /* Glassmorphism effect */
        border-radius: 15px;
        backdrop-filter: blur(10px);
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.5);
        text-align: center;
        animation: fadeIn 1.5s ease-in-out;
    }

    .about-container h1 {
        color: #ffffff;
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 15px;
        letter-spacing: 2px;
        text-transform: uppercase;
        background: linear-gradient(to right, #ff6b6b, #ffcc5c);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .about-container p {
        font-size: 1.3rem;
        line-height: 1.8;
        color: #cccccc;
        margin-bottom: 20px;
    }

    /* Call to Action Button */
    .about-btn {
        display: inline-block;
        padding: 14px 28px;
        font-size: 1.1rem;
        font-weight: bold;
        color: #ffffff;
        background: linear-gradient(45deg, #ff6b6b, #ffcc5c);
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 4px 10px rgba(255, 107, 107, 0.5);
    }

    .about-btn:hover {
        background: linear-gradient(45deg, #ffcc5c, #ff6b6b);
        transform: translateY(-3px);
        box-shadow: 0 6px 14px rgba(255, 107, 107, 0.7);
    }

    /* Animation */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="about-container">
    <h1>About BookIt</h1>
    <p>
        <strong>BookIt</strong> is your ultimate event booking platform,bringing people together for unforgettable experiences.
        Whether you're attending or hosting, we provide a smooth, hassle-free event management experience.  
    </p>
    <p>
        Our AI-driven recommendations, seamless booking process, and secure payments ensure you get the best events tailored to you.
        Join us today and never miss an event that matters!
    </p>
    <a href="@Url.Action("Contact", "Home")" class="about-btn">Get in Touch</a>
</div>
