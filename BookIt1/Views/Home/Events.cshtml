@{
    Layout = "_Layout";
    ViewData["Title"] = "Events";
}
@model IEnumerable<BookIt1.Areas.Admin.Models.Event>

<section class="event-section">
    <div class="event-wrapper">
        <h2 class="modern-heading">Upcoming Events</h2>

        <!-- Search Bar -->
        <form method="get" class="search-form" action="@Url.Action("Events", "Home")">
            <input type="text" name="searchString" class="search-input" placeholder="Search events..." value="@ViewData["SearchQuery"]" />
            <button type="submit" class="search-btn">Search</button>
        </form>


        @if (Model != null && Model.Any())
        {
            <div class="event-grid">
                @foreach (var ev in Model)
                {
                    <div class="event-card">
                        <img src="@ev.ImagePath" alt="Event Image" />
                        <div class="card-body">
                            <h3 class="card-title">@ev.Title</h3>
                            <p class="card-text"><strong>📍 Location:</strong> @ev.Location</p>
                            @*<p class="card-text">@ev.Description</p>*@
                            <p class="card-text"><strong>📅 Date:</strong> @ev.EventDate.ToString("yyyy-MM-dd")</p>
                            @*<p class="card-text"><strong>💰 Price:</strong> @ev.Price.ToString("C")</p>*@
                           @* <p class="card-text"><strong>🎟️ Seats:</strong> @ev.AvailableSeats / @ev.TotalSeats</p>*@
                            <p class="card-text"><strong>🗂️ Category:</strong> @ev.Category</p>

                            <div class="book-now-container">
                                <a href="@Url.Action("EventDetails", "Home", new { id = ev.Id })" class="book-now-btn">Book Now</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">No events found.</div>
        }
    </div>
</section>



<style>
    body {
        background-color: #121212 !important;
    }

    .event-section {
        background-color: #121212;
        padding: 60px 0;
        color: #fff;
    }

    .event-wrapper {
        max-width: 1300px;
        margin: 0 auto;
        padding: 0 40px; /* Add balanced horizontal padding */
    }

    .event-section h2 {
        text-align: left;
        font-size: 2.5rem;
        margin-bottom: 40px;
        padding-left: 5px;
    }

    .event-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        justify-content: flex-start;
    }

    .event-card {
        background: #1e1e1e;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        width: calc(33.333% - 20px);
        display: flex;
        flex-direction: column;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .event-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5);
    }

    .event-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 1.4rem;
        margin-bottom: 10px;
        color: #ffffff;
    }

    .card-text {
        font-size: 0.95rem;
        margin: 6px 0;
        color: #cccccc;
    }

    @@media (max-width: 992px) {
        .event-card {
            width: calc(50% - 15px);
        }
    }

    @@media (max-width: 576px) {
        .event-card {
            width: 100%;
        }
    }
    .modern-heading {
        font-size: 2.8rem;
        font-weight: 700;
        text-align: center;
        color: transparent;
        background-image: linear-gradient(90deg, #ff6a00, #ee0979);
        -webkit-background-clip: text;
        background-clip: text;
        margin-bottom: 50px;
        letter-spacing: 1px;
        animation: fadeInUp 0.8s ease-out;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .book-now-btn {
        display: inline-block;
        margin-top: 15px;
        padding: 10px 20px;
        background: linear-gradient(90deg, #ff6a00, #ee0979);
        color: #fff;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.2s;
        box-shadow: 0 4px 12px rgba(255, 105, 135, 0.2);
    }

    .book-now-btn:hover {
        background: linear-gradient(90deg, #ee0979, #ff6a00);
        transform: translateY(-2px);
        }

    .book-now-container {
        display: flex;
        justify-content: center;
        margin-top: 15px;
    }

    /* Search Bar Styles */
    .search-form {
        display: flex;
        justify-content: center;
        margin-bottom: 30px;
    }

    .search-input {
        width: 300px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 8px;
        margin-right: 10px;
        font-size: 1rem;
    }

    .search-btn {
        padding: 10px 20px;
        background: linear-gradient(90deg, #ff6a00, #ee0979);
        color: #fff;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .search-btn:hover {
            background: linear-gradient(90deg, #ee0979, #ff6a00);
        }

</style>
