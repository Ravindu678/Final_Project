@model SendEmail
@{
    ViewData["Title"] = "Contact";
}
<h1 class="text-center">@ViewBag.Message</h1>

<div class="contact-container">
    <form method="post" class="contact-form">
        <div class="form-group">
            <label asp-for="@Model.Subject" class="form-label">Subject</label>
            <input type="text" asp-for="@Model.Subject" class="form-control" placeholder="Subject">
            <span class="text-danger" asp-validation-for="@Model.Subject"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Name" class="form-label">Name</label>
            <input type="text" asp-for="@Model.Name" class="form-control" placeholder="Enter Name">
            <span class="text-danger" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Email" class="form-label">Email address</label>
            <input type="email" asp-for="@Model.Email" class="form-control" placeholder="Enter Email">
            <span class="text-danger" asp-validation-for="@Model.Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Mobile" class="form-label">Mobile</label>
            <input type="number" asp-for="@Model.Mobile" class="form-control" placeholder="Enter Mobile">
            <span class="text-danger" asp-validation-for="@Model.Mobile"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Message" class="form-label">Message</label>
            <textarea asp-for="@Model.Message" class="form-control" placeholder="Enter Message" rows="4"></textarea>
            <span class="text-danger" asp-validation-for="@Model.Message"></span>
        </div>
        <div class="form-group text-center">
            <button type="submit" class="submit-btn">Submit</button>
        </div>
    </form>
</div>

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #121212;
        color: white;
        margin: 0;
        padding: 0;
    }

    .contact-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: #121212;
    }

    .contact-form {
        width: 100%;
        max-width: 500px;
        background: #1e1e1e;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        transition: all 0.3s ease-in-out;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        color: #ddd;
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 15px;
        font-size: 14px;
        background-color: #333;
        border-radius: 8px;
        border: 1px solid #444;
        color: white;
        outline: none;
        transition: all 0.3s ease-in-out;
    }

        .form-control:focus {
            border-color: #ff6a00;
            background-color: #444;
        }

        .form-control::placeholder {
            color: #aaa;
        }

    .submit-btn {
        display: inline-block;
        padding: 14px 30px;
        font-size: 1rem;
        font-weight: 700;
        color: white;
        background: linear-gradient(45deg, #ff6a00, #ffcc5c);
        border: none;
        border-radius: 8px;
        cursor: pointer;
        text-decoration: none;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.4);
    }

        .submit-btn:hover {
            background: linear-gradient(45deg, #ffcc5c, #ff6a00);
            transform: translateY(-3px);
            box-shadow: 0 8px 18px rgba(255, 107, 107, 0.7);
        }

        .submit-btn:active {
            transform: translateY(1px);
        }

    .text-center {
        text-align: center;
    }
</style>
