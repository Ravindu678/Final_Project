@{
    ViewData["Title"] = "Payment Success";
}

<div class="container mt-5">
    <div class="card bg-dark text-light shadow-lg rounded-4 p-5 text-center animate__animated animate__fadeInUp">
        <div class="mb-4">
            <div class="checkmark-circle">
                <div class="background"></div>
                <div class="checkmark draw"></div>
            </div>
        </div>
        <h2 class="text-success mb-3 animate__animated animate__fadeIn">🎉 Payment Successful!</h2>
        <p class="lead mb-2 animate__animated animate__fadeIn animate__delay-1s">
            Thank you for booking your event with us.
        </p>
        <p class="mb-4 animate__animated animate__fadeIn animate__delay-2s">
            A confirmation email has been sent to your registered email address.
        </p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-success btn-lg animate__animated animate__fadeIn animate__delay-3s">
            Go to Home
        </a>
    </div>
</div>

<!-- Animation & style -->
<style>
    body {
        background-color: #121212 !important;
        color: #e0e0e0;
    }

    .card {
        border-radius: 1.5rem;
    }

    .btn-outline-success:hover {
        background-color: #28a745;
        color: #fff;
        box-shadow: 0 0 10px #28a74566;
    }

    /* Checkmark circle animation */
    .checkmark-circle {
        width: 100px;
        height: 100px;
        position: relative;
        display: inline-block;
        vertical-align: top;
    }

    .background {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background: #28a745;
        position: absolute;
    }

    .checkmark {
        border-radius: 5px;
    }

    .checkmark.draw:after {
        animation-delay: 0.5s;
        animation-duration: 1s;
        animation-name: checkmark;
        animation-timing-function: ease;
        animation-fill-mode: forwards;
        content: '';
        position: absolute;
        left: 28px;
        top: 48px;
        width: 25px;
        height: 6px;
        background-color: white;
        transform: rotate(45deg);
        border-radius: 2px;
    }

    @@keyframes checkmark {
        0% {
            width: 0;
            left: 28px;
            top: 48px;
        }
        50% {
            width: 25px;
            top: 48px;
        }
        100% {
            width: 25px;
            top: 48px;
        }
    }
</style>

<!-- Animate.css CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>

