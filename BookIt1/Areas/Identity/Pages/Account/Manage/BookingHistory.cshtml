@page
@model BookingHistoryModel
@{
    ViewData["Title"] = "My Bookings";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">📅 My Booking History</h2>

    @if (Model.Bookings != null && Model.Bookings.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Event</th>
                        <th>Date</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Bookings)
                    {
                        <tr>
                            <td>@item.Event.Title</td>
                            <td>@item.Event.EventDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.TicketsBooked</td>
                            <td>Rs. @(item.TicketsBooked * item.Event.Price)</td>

                            <td>
                                <form method="post" asp-page-handler="Cancel" asp-route-id="@item.Id" onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            You have no bookings yet.
        </div>
    }
</div>




