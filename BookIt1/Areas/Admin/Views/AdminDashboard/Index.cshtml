<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        /* General Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            display: flex;
            height: 100vh;
            background: #181818;
            color: white;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background: #222;
            padding: 20px;
            display: flex;
            flex-direction: column;
            gap: 20px;
            box-shadow: 2px 0px 10px rgba(0, 255, 255, 0.3);
        }

        .sidebar h2 {
            text-align: center;
            margin-bottom: 20px;
            color: cyan;
            text-shadow: 0 0 10px cyan;
        }

        .sidebar a {
            text-decoration: none;
            color: white;
            padding: 10px;
            border-radius: 5px;
            transition: 0.3s;
            display: block;
            background: rgba(0, 255, 255, 0.1);
            text-align: center;
        }

        .sidebar a:hover {
            background: cyan;
            color: black;
            box-shadow: 0px 0px 10px cyan;
        }

        /* Main Content */
        .main-content {
            flex-grow: 1;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .cards {
            display: flex;
            gap: 20px;
            margin-top: 20px;
        }

        .card {
            width: 200px;
            padding: 20px;
            background: rgba(0, 255, 255, 0.2);
            border-radius: 10px;
            text-align: center;
            transition: 0.3s;
            box-shadow: 0px 0px 10px rgba(0, 255, 255, 0.3);
        }

        .card:hover {
            background: cyan;
            color: black;
            box-shadow: 0px 0px 15px cyan;
        }

        /* Logout Button */
        .logout {
            background: red;
            color: white;
            padding: 10px;
            border-radius: 5px;
            text-decoration: none;
            display: block;
            text-align: center;
            margin-top: auto;
        }

        .logout:hover {
            background: darkred;
            box-shadow: 0px 0px 10px red;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Admin Panel</h2>
        <a href="#">Dashboard</a>
       
        <a asp-area="Admin" asp-controller="Event" asp-action="Index" class="btn btn-primary">Manage Events</a>

        <a asp-area="Admin" asp-controller="Reports" asp-action="Index">Reports</a>

        <a href="@Url.Action("Logout", "Account", new { area = "Admin" })" class="logout-button">Logout</a>

    </div>

    <!-- Main Content -->
    <div class="main-content">
        <h1>Welcome, Admin!</h1>
        <p>Here's your dashboard overview.</p>

        <div class="cards">
            <div class="card">
                <h3>@ViewBag.UserCount</h3>
                <p>Total Users</p>
            </div>
            <div class="card">
                <h3>@ViewBag.EventCount</h3>
                <p>Active Events</p>
            </div>
            <div class="card">
                <h3>@ViewBag.TotalBookings</h3>
                <p>Total Bookings</p>
            </div>
            <div class="card">
                <h3>Rs. @ViewBag.TotalSales</h3>
                <p>Total Sales</p>
            </div>
        </div>
    </div>

</body>
</html>
