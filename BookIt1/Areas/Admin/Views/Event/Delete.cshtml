@{
    Layout = "_Layout";
}

@model BookIt1.Areas.Admin.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<div class="card shadow-lg mt-4">
    <div class="card-header bg-danger text-white">
        <h3 class="mb-0">Delete Event</h3>
    </div>
    <div class="card-body bg-light">
        <div class="alert alert-danger text-center">
            <h5 class="fw-bold">Are you sure you want to delete this event?</h5>
            <p class="mb-0">This action cannot be undone.</p>
        </div>

        <div class="mb-4">
            <h4 class="text-primary">@Model.Title</h4>
            <p class="text-muted">@Model.Description</p>
            <p><strong>Date:</strong> @Model.EventDate.ToString("yyyy-MM-dd")</p>
            <p><strong>Location:</strong> @Model.Location</p>
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger px-4">Delete</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>
