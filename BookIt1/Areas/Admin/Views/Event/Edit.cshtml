@{
    Layout = "_Layout";
}

@model BookIt1.Areas.Admin.Models.Event

@{
    ViewData["Title"] = "Edit Event";
}

<h2>Edit Event</h2>

<div class="card shadow-lg mt-4">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Edit Event</h3>
    </div>
    <div class="card-body bg-light">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-bold">Event Title</label>
                <input asp-for="Title" class="form-control" placeholder="Enter event title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold">Description</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter event description"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="EventDate" class="form-label fw-bold">Event Date</label>
                <input asp-for="EventDate" class="form-control" type="date" />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="TotalTickets" class="form-label fw-bold">Total Tickets</label>
                    <input asp-for="TotalTickets" class="form-control" placeholder="Enter total Tickets" />
                </div>
               @* <div class="col-md-6 mb-3">
                    <label asp-for="AvailableSeats" class="form-label fw-bold">Available Seats</label>
                    <input asp-for="AvailableSeats" class="form-control" placeholder="Enter available seats" />
                </div>*@
            </div>

            <div class="mb-3">
                <label asp-for="Location" class="form-label fw-bold">Location</label>
                <input asp-for="Location" class="form-control" placeholder="Enter event location" />
            </div>

            <div class="mb-3">
                <label asp-for="Category" class="form-label fw-bold">Category</label>
                <input asp-for="Category" class="form-control" placeholder="Enter event category" />
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label fw-bold">Price</label>
                <input asp-for="Price" class="form-control" placeholder="Enter event price" />
            </div>

            <div class="mb-3">
                <label asp-for="ImagePath" class="form-label fw-bold">Upload Image</label>
                <input asp-for="ImagePath" class="form-control" type="file" name="ImageFile" />
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success px-4">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>
